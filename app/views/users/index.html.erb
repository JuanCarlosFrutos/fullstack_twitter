<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
<!--         <td><%= link_to 'Show', user %></td>  -->
        <td><%= link_to 'Show','',:onClick => "show_user(event, #{user.id});" %></td>
        <td><%= link_to 'Show microposts','',:onClick => "show_microposts(event, #{user.id});" %></td>
<!--         <td><%= link_to 'Edit', edit_user_path(user) %></td> -->
        <td><%= link_to 'Edit','', :onClick => "show_edit(event,#{user.id})" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div id="show" style="display: none;">
  <p>
    <strong>Name:</strong>
    <p id="name"></p>
  </p>
  <p>
    <strong>Email:</strong>
    <p id="email"></p>
  </p>
</div>

<div id="show-micropost" style="display: none;">
  <p>
    <strong>Micropost:</strong>
    <p id="microposts"></p>
  </p>
</div>

<div id="show-edit" style="display: none;"></div>

<%= link_to 'New User', new_user_path %>
